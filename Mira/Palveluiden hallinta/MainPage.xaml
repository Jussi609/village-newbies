<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Palveluiden_hallinta.MainPage">

    <ListView ItemsSource="{Binding Palvelut}">
        <ListView.Header>
            <StackLayout>
                <Grid Padding="5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>
                    <Label Text="Alueen Nimi" FontAttributes="Bold" Grid.Column="1" Margin="10"/>
                    <Label Text="Nimi" FontAttributes="Bold" Grid.Column="2" Margin="10"/>
                    <Label Text="Kuvaus" FontAttributes="Bold" Grid.Column="3" Margin="10"/>
                    <Label Text="Hinta" FontAttributes="Bold" Grid.Column="4" Margin="10"/>
                    <Label Text="ALV" FontAttributes="Bold" Grid.Column="5" Margin="10"/>
                </Grid>
            </StackLayout>
        </ListView.Header>
        <ListView.ItemTemplate>
            <DataTemplate>
                <ViewCell>
                    <Grid Padding="5">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>
                        <Label Text="{Binding AlueenNimi}" Grid.Column="0" Margin="4"/>
                        <Label Text="{Binding Nimi}" Grid.Column="1" Margin="4"/>
                        <Label Text="{Binding Kuvaus}" Grid.Column="2" Margin="4"/>
                        <Label Text="{Binding Hinta}" Grid.Column="3" Margin="4"/>
                        <Label Text="{Binding Alv}" Grid.Column="4" Margin="4"/>
                    </Grid>
                </ViewCell>
            </DataTemplate>
        </ListView.ItemTemplate>
    </ListView> 
</ContentPage>
